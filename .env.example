# Inkless Production Environment Variables
# Copy this file to .env and fill in the values

# === Domain Configuration ===
DOMAIN=inkless.yourdomain.com
NEXTAUTH_URL=https://inkless.yourdomain.com

# === Frontend ===
NEXT_PUBLIC_API_URL=https://inkless.yourdomain.com/api/v1
BACKEND_URL=http://backend:8080

# === Authentication ===
AUTH_SECRET=generate-with-openssl-rand-base64-32
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# === Database ===
POSTGRES_USER=inkless
POSTGRES_PASSWORD=change-this-strong-password
POSTGRES_DB=inkless
DATABASE_URL=postgres://inkless:change-this-strong-password@db:5432/inkless?sslmode=disable

# === Redis ===
REDIS_URL=redis://redis:6379

# === Blockchain ===
BESU_NODE_URL=https://rpc-amoy.polygon.technology/
CONTRACT_ADDRESS=0xfBCE26AFbef31Df6ff9D1Bb6C9444a658492C1Ba
SIGNER_PRIVATE_KEY=0x70122dfcaad7d51165fd18f4d6e5a81bf30850586b9ca660cce4731652b7d414

# === Security ===
JWT_SECRET=generate-a-secure-random-string-here
ENVIRONMENT=production
